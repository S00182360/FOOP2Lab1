<Window x:Class="FOOP2Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FOOP2Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="AntiqueWhite">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="116,28,0,0" TextWrapping="Wrap" Text="Bands" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.518,0.471"/>
        <TextBlock x:Name="tbkInfo" HorizontalAlignment="Left" Margin="459,74,0,0" TextWrapping="Wrap" Text="Band Info" VerticalAlignment="Top" FontSize="20"/>
        <ListBox x:Name="lbxBandList" HorizontalAlignment="Left" Height="238" Margin="113,106,0,0" VerticalAlignment="Top" Width="272" SelectionChanged="LbxBandList_SelectionChanged"/>
        <TextBlock x:Name="tbkGenre" HorizontalAlignment="Left" Margin="116,74,0,0" TextWrapping="Wrap" Text="Genre" VerticalAlignment="Top" FontSize="16" Height="25" Width="53"/>
        <ComboBox x:Name="cbxFilterGenre" HorizontalAlignment="Left" Margin="174,74,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CbxFilterGenre_SelectionChanged"/>
        <TextBlock x:Name="tbkAlbum" HorizontalAlignment="Left" Margin="459,202,0,0" TextWrapping="Wrap" Text="Albums" VerticalAlignment="Top" FontSize="18"/>
        <ListBox x:Name="lbxAlbums" HorizontalAlignment="Left" Height="113" Margin="459,231,0,0" VerticalAlignment="Top" Width="210"/>
        <TextBlock x:Name="tbkBandDetail" HorizontalAlignment="Left" Margin="459,106,0,0" TextWrapping="Wrap" Text="Select a Band to see more details..." VerticalAlignment="Top" Height="90" Width="210" Background="White"/>

    </Grid>
</Window>
